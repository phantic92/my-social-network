@model IEnumerable<ClientManager.Models.message>

@{
    ViewBag.Title = "ListMessages";
}

<h2>ListMessages</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.message1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.timestamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.read)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.receiver)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sender)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.message1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timestamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.read)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.person.first_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.person1.first_name)
        </td>
    </tr>
}
</table>
